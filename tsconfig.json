{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6", "dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "*": ["*"],
      "src/*": ["*"],
      "utils": ["utils"],
      "atoms": ["atoms"],
      "hooks": ["hooks"],
      "appTypes": ["types"],
      "@appTypes": ["types"],
      "modules/*": ["modules/*"],
      "selectors": ["selectors"],
      "@constants": ["constants"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
